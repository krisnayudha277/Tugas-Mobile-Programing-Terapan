<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg2"
        android:padding="20dp"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jadwal Sholat"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridsatu"
                android:columnCount="1"
                android:rowCount="3">
            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">
                <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">
                        <TextView
                                android:id="@+id/shubub"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Shubuh"/>
                        <TextView
                                android:id="@+id/txt1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Shubuh"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">
                        <TextView
                                android:id="@+id/dhuhur"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Shubuh"/>
                        <TextView
                                android:id="@+id/txt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Shubuh"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">
                        <TextView
                                android:id="@+id/ashar"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Ashar"/>
                        <TextView
                                android:id="@+id/txt3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ashar"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">
                        <TextView
                                android:id="@+id/maghrib"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Magrib"/>
                        <TextView
                                android:id="@+id/txt4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Magrib"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">
                        <TextView
                                android:id="@+id/isya"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Isya"/>
                        <TextView
                                android:id="@+id/txt5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Isya"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            >
                        <TextView
                                android:id="@+id/dhuha"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Dhuha"/>
                        <TextView
                                android:id="@+id/txt6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dhuha"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Jadwal"
                android:gravity="center"
                android:textColor="#000"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shubuh2"
                        android:gravity="center"
                        android:hint="Shubuh"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dhuhur2"
                        android:gravity="center"
                        android:hint="Dhuhur"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dhuha2"
                        android:gravity="center"
                        android:hint="Dhuha"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ashar2"
                        android:gravity="center"
                        android:hint="Ashar"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/magrib2"
                        android:gravity="center"
                        android:hint="Magrhib"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/isha2"
                        android:gravity="center"
                        android:hint="Isha"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_marginTop="20dp"
                        android:id="@+id/simpan2"
                        android:gravity="center"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kembali"
                        android:layout_marginTop="20dp"
                        android:id="@+id/kembali"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
